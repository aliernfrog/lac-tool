<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/sheet_background"
    android:orientation="vertical"
    android:paddingStart="24dp"
    android:paddingEnd="24dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="false"
        android:padding="8dp"
        android:scaleX="0.7"
        android:scaleY="0.7"
        app:srcCompat="?lactool_indicatorDrawable"
        tools:ignore="ContentDescription" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/mapEdit_mapType"
                android:textAlignment="center"
                android:textColor="?android:textColorPrimary"
                android:textSize="30sp" />

            <RadioGroup
                android:id="@+id/mapType_group"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:background="@drawable/linear_button"
                android:padding="8dp">

                <RadioButton
                    android:id="@+id/mapType_button_0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/mapEdit_type_0"
                    android:textColor="?android:textColorPrimary"
                    android:textStyle="bold" />

                <RadioButton
                    android:id="@+id/mapType_button_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/mapEdit_type_1"
                    android:textColor="?android:textColorPrimary"
                    android:textStyle="bold" />

                <RadioButton
                    android:id="@+id/mapType_button_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/mapEdit_type_2"
                    android:textColor="?android:textColorPrimary"
                    android:textStyle="bold" />

                <RadioButton
                    android:id="@+id/mapType_button_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/mapEdit_type_3"
                    android:textColor="?android:textColorPrimary"
                    android:textStyle="bold" />

                <RadioButton
                    android:id="@+id/mapType_button_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/mapEdit_type_4"
                    android:textColor="?android:textColorPrimary"
                    android:textStyle="bold" />

                <RadioButton
                    android:id="@+id/mapType_button_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/mapEdit_type_5"
                    android:textColor="?android:textColorPrimary"
                    android:textStyle="bold" />
            </RadioGroup>

            <Button
                android:id="@+id/mapType_done"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/linear_blue"
                android:text="@string/action_done"
                android:textColor="?lactool_textOnRed"
                android:textStyle="bold"
                app:backgroundTint="?lactool_blue" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>