<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LACMapTool" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Customization -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/backgroundDark</item>
        <item name="android:navigationBarColor" tools:targetApi="23">@color/backgroundDark</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">false</item>
        <item name="android:colorEdgeEffect" tools:targetApi="l">@color/white</item>
        <item name="colorControlActivated">@color/blueLight</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="bottomSheetDialogTheme">@style/Theme.LACMapTool.BottomSheetDialog</item>
        <!-- LAC Tool -->
        <item name="lactool_background">@color/backgroundDark</item>
        <item name="lactool_hint">@color/hintDark</item>
        <item name="lactool_textOnRed">@color/textOnRedDark</item>
        <item name="lactool_hintOnRed">@color/hintOnRedDark</item>
        <item name="lactool_linear">@color/linearDark</item>
        <item name="lactool_button">@color/buttonDark</item>
        <item name="lactool_blue">@color/blueDark</item>
        <item name="lactool_red">@color/redDark</item>
        <item name="lactool_linearDrawable">@drawable/linear_dark</item>
        <item name="lactool_linearButtonDrawable">@drawable/linear_button_dark</item>
        <item name="lactool_linearBlueDrawable">@drawable/linear_blue_dark</item>
        <item name="lactool_linearRedDrawable">@drawable/linear_red_dark</item>
        <item name="lactool_sheetBackgroundDrawable">@drawable/sheet_background_dark</item>
        <item name="lactool_indicatorDrawable">@drawable/indicator_white</item>
        <item name="lactool_mapDrawable">@drawable/map_white</item>
        <item name="lactool_wallpaperDrawable">@drawable/wallpaper_white</item>
        <item name="lactool_screenshotDrawable">@drawable/gallery_white</item>
        <item name="lactool_playDrawable">@drawable/play_white</item>
        <item name="lactool_optionsDrawable">@drawable/options_white</item>
        <item name="lactool_updateDrawable">@drawable/update_white</item>
    </style>
</resources>