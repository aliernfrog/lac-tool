<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LACMapTool" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Customization -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/backgroundLight</item>
        <item name="android:navigationBarColor" tools:targetApi="23">@color/backgroundLight</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
        <item name="android:colorEdgeEffect" tools:targetApi="l">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="bottomSheetDialogTheme">@style/Theme.LACMapTool.BottomSheetDialog</item>
        <!-- LAC Tool -->
        <item name="lactool_background">@color/backgroundLight</item>
        <item name="lactool_hint">@color/hintLight</item>
        <item name="lactool_textOnRed">@color/textOnRedLight</item>
        <item name="lactool_hintOnRed">@color/hintOnRedLight</item>
        <item name="lactool_linear">@color/linearLight</item>
        <item name="lactool_button">@color/buttonLight</item>
        <item name="lactool_blue">@color/blueLight</item>
        <item name="lactool_red">@color/redLight</item>
        <item name="lactool_indicatorDrawable">@drawable/indicator_black</item>
        <item name="lactool_mapDrawable">@drawable/map_black</item>
        <item name="lactool_wallpaperDrawable">@drawable/wallpaper_black</item>
        <item name="lactool_screenshotDrawable">@drawable/gallery_black</item>
        <item name="lactool_playDrawable">@drawable/play_black</item>
        <item name="lactool_optionsDrawable">@drawable/options_black</item>
        <item name="lactool_updateDrawable">@drawable/update_black</item>
    </style>
</resources>