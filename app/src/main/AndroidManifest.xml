<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.aliernfrog.LacMapTool">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE" tools:ignore="ScopedStorage" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LACMapTool">
        <activity
            android:name=".SplashActivity"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" android:configChanges="locale|orientation"/>
        <activity android:name=".GalleryActivity" android:configChanges="locale|orientation"/>
        <activity android:name=".MapsActivity" android:configChanges="locale|orientation"/>
        <activity android:name=".WallpaperActivity" android:configChanges="locale|orientation"/>
        <activity android:name=".MapsOptionsActivity" android:configChanges="locale|orientation"/>
        <activity android:name=".OptionsActivity" android:configChanges="locale|orientation" android:windowSoftInputMode="adjustResize"/>
        <activity android:name=".RestoreActivity" android:configChanges="locale|orientation"/>
    </application>

</manifest>